{
  "name": "nestjs-boilerplate",
  "version": "1.0.0",
  "description": "NestJS Boilerplate",
  "author": {
    "name": "tushuynh",
    "email": "huynhtu.1520@gmail.com"
  },
  "private": true,
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "format": "yarn format:src && yarn format:test",
    "format:src": "prettier --write src/**/*.ts",
    "format:test": "prettier --write test/**/*.ts",
    "lint": "eslint {src,test}/**/*.ts --fix",
    "lint:src": "eslint src/**/*.ts",
    "lint:test": "eslint test/**/*.ts",
    "gen:key": "node -r ts-node/register ./scripts/generateKeys.ts",
    "enc": "bash ./scripts/encrypt.sh",
    "dec": "bash ./scripts/decrypt.sh",
    "prepare": "husky install",
    "seed": "yarn seed:user",
    "seed:user": "nestjs-command seed:user",
    "rollback": "yarn rollback:user",
    "rollback:user": "nestjs-command remove:user"
  },
  "dependencies": {
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/throttler": "^6.0.0",
    "@prisma/client": "^5.14.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "helmet": "^7.1.0",
    "moment": "^2.30.1",
    "nestjs-command": "^3.1.4",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.2.0",
    "ua-parser-js": "^1.0.38"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@faker-js/faker": "^9.0.2",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.13",
    "@types/jest": "29.5.0",
    "@types/lodash": "^4.17.6",
    "@types/node": "18.15.11",
    "@types/supertest": "^2.0.11",
    "@types/ua-parser-js": "^0.7.39",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.0",
    "jest": "29.5.0",
    "lint-staged": "^15.2.4",
    "prettier": "^2.3.2",
    "prisma": "^5.14.0",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "29.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.6.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
